generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  name     String?
  id       String  @id
  email    String  @unique
  password String
  role     Role

  @@map("users")
}

model Candidate {
  id                  Int       @id @default(autoincrement())
  name                String
  nssNumber           String
  district            String
  portfolio           Portfolio
  institutionAttended String
  qualification       String
  posting             String
  position            String
  contact             String
  votes               Vote[]

  @@map("candidates")
}

model Vote {
  id          Int       @id @default(autoincrement())
  candidateId Int
  candidate   Candidate @relation(fields: [candidateId], references: [id])

  @@map("votes")
}

enum Role {
  ADMIN
  REGISTRAR
  VOTER
}

enum Portfolio {
  PRESIDENT
  VICE_PRESIDENT
  GENERAL_SECRETARY
  FINANCIAL_SECRETARY
  ORGANIZER
  WOMENS_COMMISSIONER
}
